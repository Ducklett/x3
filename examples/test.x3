import "./std"

#entrypoint
proc main[] {
    (( std.write("Hello world!\n"); ))
    (( sys.exit(0); ))

    const msg = "What's your name?\n";
    const greet = "hello ";
    const end = "!\n";
    const name:[40]char;

    sys.write(sys.stdout, msg, msg.length);

    var len = sys.read(sys.stdin, name, name.length) - 1;

    sys.write(sys.stdout, greet, greet.length);
    sys.write(sys.stdout, name, len);
    sys.write(sys.stdout, end, end.length);
    sys.exit(0);
}
