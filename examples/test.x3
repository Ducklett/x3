#entrypoint
proc main[] {
    const msg = "What's your name?\n";
    const greet = "hello ";
    const end = "!\n";
    const name:[40]char;

    write(stdout, msg, msg.length);

    var len = read(stdin, name, name.length) - 1; ((trim newline))

    write(stdout, greet, greet.length);
    write(stdout, name, len);
    write(stdout, end, end.length);
    exit(0);
}
